extends layouts/login-layout.pug

block content
    .loginContainer
        h1 Login
        form(method="post")
            input(class="text" type="text", name="logUsername", placeholder="Username or email", required="")
            input(class="password" type="password", name="logPassword", placeholder="Password", required="")
            input(class="submit" type="submit", value="Login")
        a(href="/register") Need an account? Register here.
